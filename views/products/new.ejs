<%- include('../partials/header')%> 
<%- include('../partials/navbar')%>

<div class="container" style="margin-top: 3rem; width: 80vw">
  <form
    class="validated-form"
    action="/products"
    method="POST"
    style="max-width: 70%; margin: 10px auto"
    novalidate
  >
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="product[name]"
        placeholder="Product Name"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <label for="img" class="form-label">Image URL</label>
      <input
        type="text"
        class="form-control"
        id="img"
        name="product[img]"
        placeholder="Image URL"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price in $</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="product[price]"
        placeholder="Price"
        required
      />
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="desc" class="form-label">Description</label><br />
      <textarea
        id="desc"
        class="form-label"
        cols="73"
        rows="5"
        name="product[desc]"
        required
      ></textarea>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>

<%- include('../partials/footer')%>
